<div>
  <div>
    <h1>
      KittyWell Forum
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new post
    </h2>

<% if current_user != nil %>
    <form action="/insert_post" method="post">

      <div>
        <label for="subject_box">
          Subject
        </label>

        <input type="text" id="subject_box" name="query_subject">
      </div>

      <div>
        <label for="content_box">
          Content
        </label>

        <textarea id="content_box" name="query_content" rows="3"></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <button>
        Add post
      </button>
    </form>

    <% else %>
      <p>You must <a href="/users/sign_in">sign in</a> to add a board.</p>
    <% end %>

  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          User
        </th>

        <th>
          Subject
        </th>

        <th>
         Image
        </th>

        <th>
          Content 
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_posts.each do |a_post| %>
      <tr>

        <td>
        <% matching_users = User.where({ :id => a_post.user_id }) %>
        <% the_user = matching_users[0] %>
        <%= the_user.name %>
        </td>

        <td>
          <%= a_post.subject %>
        </td>

 <td>
          <img src="<%= a_post.image %>" height="50px">
        </td>

        <td>
          <%= a_post.content %>
        </td>


        <td>
          <%= a_post.created_at.strftime("%b %e, %Y") %>
        </td>
        <td>
          <%= time_ago_in_words(a_post.updated_at) %> ago
        </td>

        <td>
          <a href="/posts/<%= a_post.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
